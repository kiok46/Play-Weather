#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

<LocationButton>:
	text: "{} ({})".format(self.location[0], self.location[1]) #since the data is a list
	height: "40dp"
	size_hint_y: None
	on_press: root.parent.parent.parent.parent.parent.parent.parent.parent.parent.ids.locations.update(self.location)

<Locations>:
	orientation:'vertical'
	search_input: search_box
	search_results: search_result_list
	BoxLayout:
		size_hint: 1,.175
		TextInput:
			id: search_box
			multiline: False
			on_text_validate: root.search_location()
		Button:
			text: "Search"
			background_color: 1,1,1,.4
			on_press: root.search_location()
			
	ListView:
		id: search_result_list
		adapter:
			ListAdapter(data=[], cls = root.LocationButton, args_converter=root.args_converter) #add args_converter
	
