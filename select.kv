<Select>:
	lbl_: lbl
	btn: btn
	year_1: year_1
	year_2: year_2
	
	Label:
		id: lbl
		text:'Selected Year : 2015'
		
	Spinner:
		id: year_1
		size_hint: .3,1
		halign: 'right'
		valign: 'middle'
		text_size: self.size
		text:'20'
		on_press: root.get_years()
		
	Spinner:
		id: year_2
		size_hint: .3,1
		halign: 'left'
		valign: 'middle'
		text_size: self.size
		text:'15'
		on_press: root.get_years()
	Button:
		id: btn
		text:'Go!'
		on_press: lbl.text = 'Selected Year : '
		on_release: lbl.text = lbl.text + year_1.text+year_2.text
		on_release: root.on_release()
